<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bganote"
    android:id="@+id/layoutMain"
    tools:context=".NoteMenuActivity.NoteActivity">
    <!--android:foreground="@drawable/box_radius_bg_popup"-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="match_parent">

            <ImageButton
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="20dp"
                android:onClick="onClickBack"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:fontFamily="@font/kanit_medium"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="รายละเอียดบันทึก"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">

            <ImageButton
                android:src="@drawable/settingnote"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="30dp"
                android:onClick="onClickEdit"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/weekAndDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สัปดาห์ที่ "
                android:textSize="20dp"
                android:fontFamily="@font/kanit_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="บันทึก : "
                    android:textSize="18dp"
                    android:fontFamily="@font/kanit_regular"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:fontFamily="@font/kanit_regular"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="น้ำหนัก : "
                    android:textSize="18dp"
                    android:fontFamily="@font/kanit_regular"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:fontFamily="@font/kanit_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="การดิ้น : "
                    android:textSize="18dp"
                    android:fontFamily="@font/kanit_regular"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txtKick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:fontFamily="@font/kanit_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="370px"
                        android:orientation="vertical"
                        android:padding="14px"
                        android:background="@drawable/box_radius_frame_pic">
                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/pic1"
                            android:src="@drawable/kick"
                            app:siBorderColor="@color/colorBtnOld"
                            app:siBorderWidth="1dp"
                            app:siRadius="6dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="370px"
                        android:orientation="vertical"
                        android:padding="14px"
                        android:background="@drawable/box_radius_frame_pic">
                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/pic2"
                            android:src="@drawable/kick"
                            app:siBorderColor="@color/colorBtnOld"
                            app:siBorderWidth="1dp"
                            app:siRadius="6dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>
