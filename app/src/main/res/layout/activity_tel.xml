<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtel"
    android:foreground="@drawable/box_radius_bg_popup"
    android:id="@+id/layoutMain"
    tools:context="pudpongsai.thanaporn.th.ac.su.reg.pregnant.ProfileMenuActivity.TelActivity"
    android:orientation="vertical">
    <!--android:foreground="@drawable/box_radius_bg_popup"-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="match_parent">

            <ImageButton
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="20dp"
                android:onClick="onClickBack"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:fontFamily="@font/kanit_medium"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="หมายเลขโทรศัพท์ฉุกเฉิน"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent">

            <ImageButton
                android:src="@drawable/plus"
                android:layout_width="25dp"
                android:background="@color/colorPrimary"
                android:layout_height="25dp"
                android:onClick="onClickNewTel"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/weekAndDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เบอร์ฉุกเฉินที่คุณบันทึกไว้ "
            android:textSize="20dp"
            android:fontFamily="@font/kanit_medium"/>

        <ListView
            android:layout_margin="10dp"
            android:id="@+id/listTel"
            android:divider="@null"
            android:dividerHeight="10.0sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
